{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest"
    ],
    "lib": ["ES2016", "DOM"],

    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}
