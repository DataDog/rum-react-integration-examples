// This tsconfig is only used for tooling (ex: typecheck in code editors / lint)
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "packages",
    "scripts",
    "test",
    "src",
    ".eslintrc.js",
    "eslint-local-rules"
  ],
  "exclude": ["packages/*/cjs", "packages/*/esm", "packages/*/bundle", "test/e2e", "test/app", "developer-extension"]
}
